{
  "semi": false,
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": true,
        "semi": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "arrowParens": "always"
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": false
      }
    }
  ]
}
